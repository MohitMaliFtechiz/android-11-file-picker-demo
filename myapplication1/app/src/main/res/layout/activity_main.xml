<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveZimFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save File 1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/canReadZimFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can Read File 1"
        app:layout_constraintBottom_toTopOf="@+id/saveZimFile"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/canReadZimFile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can Read File 2"
        app:layout_constraintBottom_toTopOf="@+id/canReadZimFile"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/select_folder_to_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Folder to save file"
        app:layout_constraintBottom_toTopOf="@+id/canReadZimFile1"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/previewWithCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can Read With Copy File"
        app:layout_constraintBottom_toTopOf="@+id/select_folder_to_save"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>